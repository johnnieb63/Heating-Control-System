// This #include statement was automatically added by the Particle IDE.
#include <MCP9803.h>

// This #include statement was automatically added by the Particle IDE.
//#include <Ubidots.h>



//test comment...


//#define TOKEN "ubidots key here"
//#define DATA_SOURCE_NAME "KH_Monitor"

//Ubidots ubidots(TOKEN);

MCP9803 sensor;


double temperature;
//double temperatureC;
double temph201;
double temph202;
double temph203;

int boilerOver;
int timeAdd;

double tempAv;

double tempFar;
double tempuncorrected;

int dly1;
int dly2;
int dly3;
int dly4;

int tog = 1;

double boilerUpper;
double boilerLower;

void setup() 
{
    //Serial.begin(115200);
    
    sensor.setAddress(1,1,1);
    Particle.variable("Boiler", tempAv);
    
    //Thermistor.begin();
    
    boilerUpper = 60.00;
    boilerLower = 54.00;
}

void loop() 
{
    
    
    if (dly1 <= millis() && tog == 1)
        {
            temperature = sensor.temperature();
            tempuncorrected = (temperature - 32) * 0.555556;
            tempFar = temperature;
            temph201 = ((temperature - 32) * 0.555556); //* 0.895;

            //dly2 = millis() + 2000 + timeAdd;

            if (temph201 > boilerUpper)
                {
                    boilerOver = 1; //Upper Limit Reached
                    //timeAdd = 0;
                    timeAdd = 2000;
                }
            if (temph201 >= boilerLower && temph201 <= boilerUpper)
                {
                    boilerOver = 3;
                    timeAdd = 10000;
                }
            if (temph201 < boilerLower)
                {
                    boilerOver = 0; //Safe 
                    timeAdd = 20000;
                }
                
                tog = 4;
        }
    
    if (dly3 < millis())
        {
            Particle.publish("--BoilerC", String(temph201,2),PRIVATE);
            //Particle.publish("mungoTankÂºC", String(Thermistor.getTempC(),2),PRIVATE);
            dly3 = millis() + 15000;
        }
      
    if (tog == 4)
        {
            Particle.publish("Boiler", String(boilerOver), PRIVATE);
            dly1 = millis() + 2000 + timeAdd;
            tog = 1;
        }
}



